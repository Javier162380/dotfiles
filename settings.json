{
    "[go]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.rulers": [
            80,
            120
        ]
    },
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.autocompleteUnimportedPackages": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.rulers": [
            80,
            120
        ]
    },
    "python.formatting.provider": "autopep8",
    "python.autoComplete.addBrackets": true,
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "110",
        "--experimental"
    ],
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: chromium, indent_width: 20}"
    ],
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    "python.terminal.activateEnvironment": true,
    "python.jediEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.pytestEnabled": true,
    // just when using poetry.
    "python.venvPath": "/home/javier/.cache/pypoetry/virtualenvs",
    "breadcrumbs.enabled": true,
    "window.zoomLevel": 1,
    "git.enableSmartCommit": true,
    "aws.profile": "profile:default",
    "vs-kubernetes": {
        "vs-kubernetes.helm-path": "/home/javier/.vs-kubernetes/tools/helm/linux-amd64/helm",
        "vs-kubernetes.minikube-path": "/home/javier/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
        "vs-kubernetes.draft-path": "/home/javier/.vs-kubernetes/tools/draft/linux-amd64/draft"
    },
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "files.autoSave": "off",
    "editor.formatOnSave": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "One Dark Pro"
}
